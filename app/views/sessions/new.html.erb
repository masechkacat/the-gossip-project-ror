<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card rounded-0">
                <div class="card-header">
                    <h3 class="mb-0">Вход на сайт</h3>
                </div>
                <div class="card-body">
                    <%= form_for(:session, url: sessions_path) do |f| %>
                        <div class="form-group">
                            <%= f.label :email %>
                            <%= f.email_field :email, class: "form-control rounded-0", autocomplete: "email", autofocus: true %>
                        </div>
                        <div class="form-group">
                            <%= f.label :password %>
                            <%= f.password_field :password, class: "form-control rounded-0", autocomplete: "current-password" %>
                        </div>
                        <div class="form-group">
                            <%= f.submit "Войти", class: "btn btn-primary btn-block rounded-0" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
